using System;

namespace ReadInt
{
    class Program
    {
        static void Main(string[] args)
        {
            int userNumber;
            Conversion(out userNumber);
        }
        static void Conversion(out int userNumber)
        {
            while (true)
            {
                Console.Write("Введите число: ");
                string userInput = Console.ReadLine();
                bool success = int.TryParse(userInput, out userNumber);
                if (success)
                {
                    Console.WriteLine(userNumber);
                    Console.ReadKey();
                    Console.Clear();
                }
                else
                {
                    ConsoleColor defualtColor = Console.ForegroundColor;
                    Console.ForegroundColor = ConsoleColor.Red;
                    Console.WriteLine("Ошибка!");
                    Console.ForegroundColor = defualtColor;
                }
            }
        }
    }
}
