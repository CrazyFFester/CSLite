using System;

namespace Zoo
{
    class Program
    {
        private static void Main()
        {
            Animal[] animal =
            {
                new Animal("львы", 7, "самцами", "рычат"),
                new Animal("обезьяны", 13, "самцами", "ревут"),
                new Animal("жирафы", 5, "самками", "мычат"),
                new Animal("гиппопотамы", 6, "самцами", "ревут")
            };
            Aviary aviary = new Aviary();

            Console.WriteLine($"Выберите вольер:");
            for (int i = 0; i < animal.Length; i++)
            {
                Console.WriteLine($"{i + 1}){animal[i].AnimalsLivingInAviary}.");
            }
            aviary.DisplayInformationAboutAviary(animal);

            Console.ReadKey();
        }
    }
    class Aviary
    {
        public void DisplayInformationAboutAviary(Animal[] animal)
        {
            Animal userAnimal = animal[Convert.ToInt32(Console.ReadLine()) - 1];
            userAnimal.ShowInfo();
        }
    }
    class Animal
    {
        public string AnimalsLivingInAviary { get; private set; }
        private int _numberOfAnimals;
        private string _genderOfAnimals;
        private string _animalSound;

        public Animal(string animalsLivingInAviary, int numberOfAnimals, string genderOfAnimals, string animalSound)
        {
            AnimalsLivingInAviary = animalsLivingInAviary;
            _numberOfAnimals = numberOfAnimals;
            _genderOfAnimals = genderOfAnimals;
            _animalSound = animalSound;
        }
        public void ShowInfo()
        {
            Console.WriteLine($"\nЗдесь обитают {AnimalsLivingInAviary}, " +
                $"\nих {_numberOfAnimals} особей," +
                $"\nпо половой принадлежности они являются {_genderOfAnimals}," +
                $"\nони {_animalSound}.");
        }
    }
}
