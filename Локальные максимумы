using System;

namespace Local_highs
{
    class Program
    {
        static void Main(string[] args)
        {
            Random randomValues = new Random();
            int[] arrayOfNumber = new int[30];
            int maxElement = int.MinValue;
            Console.WriteLine("Изначальный массив:");
            for (int i = 0; i < arrayOfNumber.Length; i++)
            {
                arrayOfNumber[i] = randomValue.Next(0, 10);
                if (maxElement < arrayOfNumber[i])
                {
                    maxElement = arrayOfNumber[i];
                }
                Console.Write(arrayOfNumber[i] + " ");
            }
            Console.WriteLine("\n\nМассив из локальных маскимумов:");
            for (int i = 0; i < arrayOfNumber.Length; i++)
            {
                if (arrayOfNumber[i] == maxElement)
                {
                    Console.Write(arrayOfNumber[i] + " ");
                }
            }
            Console.WriteLine();

            Console.ReadKey();
        }
    }
}
