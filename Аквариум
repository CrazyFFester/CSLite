using System;
using System.Collections.Generic;
using System.Linq;

namespace Aquarium
{
    class Program
    {
        private static void Main()
        {
            AquariumInhabitants[] aquariumInhabitants = new AquariumInhabitants[0];
            Fish fishes = new Fish(0,0);

            while (true)
            {
                Console.SetCursorPosition(0, 18);
                fishes.ShowInhabitantsOfAquarium(aquariumInhabitants);
                Console.SetCursorPosition(0, 0);

                fishes.ElementConditionCheck(ref aquariumInhabitants);
                СommandProcessing(ref aquariumInhabitants, fishes);

                Console.Clear();
            }
        }

        private static void СommandProcessing(ref AquariumInhabitants[] aquariumInhabitants, Fish fishes)
        {
            int fishNumber;

            Console.WriteLine("Выберите команду:" +
            "\n1)Добавить рыбу" +
            "\n2)Достать рыбу");

            switch (Convert.ToInt32(Console.ReadLine()))
            {
                case 1:
                    fishes.AddElement(ref aquariumInhabitants);
                    break;
                case 2:
                    Console.WriteLine("\nВвведите номер рыбы, которую хотите достать:");
                    fishNumber = Convert.ToInt32(Console.ReadLine()) - 1;
                    fishes.DeleteElement(ref aquariumInhabitants, fishNumber);
                    break;
                default:
                    Console.WriteLine("Такой команды нет!!!");
                    break;
            }
        }
        class AquariumInhabitants
        {
            public int AgeOfFish;
            public int MaximumAgeOfFish;

            public AquariumInhabitants(int ageOfFish, int maximumAgeOfFish)
            {
                AgeOfFish = ageOfFish;
                MaximumAgeOfFish = maximumAgeOfFish;
            }
            public void ShowInfo(int i)
            {
                Console.WriteLine($"{i + 1}){AgeOfFish}/{MaximumAgeOfFish}");
            }
        }
        class Fish: AquariumInhabitants
        {
            public Fish(int ageOfFish, int maximumAgeOfFish):base(ageOfFish, maximumAgeOfFish) { }
            public void AddElement(ref AquariumInhabitants[] fishes)
            {
                AquariumInhabitants[] tempFishes = new AquariumInhabitants[fishes.Length + 1];
                tempFishes[tempFishes.Length - 1] = new AquariumInhabitants(0, 10);
                for (int i = 0; i < fishes.Length; i++)
                {
                    tempFishes[i] = fishes[i];
                }
                fishes = tempFishes;
            }

            public void ShowInhabitantsOfAquarium(AquariumInhabitants[] fishes)
            {
                Console.WriteLine("\nРыбы в аквариуме:");
                for (int i = 0; i < fishes.Length; i++)
                {
                    fishes[i].ShowInfo(i);
                    fishes[i].AgeOfFish++;
                }
            }

            public void DeleteElement(ref AquariumInhabitants[] fishes, int fishNumber)
            {
                for (int i = 0; i < fishes.Length; i++)
                {
                    if (fishNumber == i)
                    {
                        List<AquariumInhabitants> tempFishes = fishes.ToList();
                        tempFishes.RemoveAt(i);
                        fishes = tempFishes.ToArray();
                    }
                }
            }

            public void ElementConditionCheck(ref AquariumInhabitants[] fishes)
            {
                for (int i = 0; i < fishes.Length; i++)
                {
                    if (fishes[i].AgeOfFish == fishes[i].MaximumAgeOfFish)
                    {
                        Console.WriteLine($"Одна из рыб умерла, она будет убрана из акавариума.\n");
                        DeleteElement(ref fishes, i);
                    }
                }
            }
        }
    }
}
