using System;
using System.Collections.Generic;
using System.Linq;

namespace Aquarium
{
    class Program
    {
        private static void Main()
        {
            Fish[] fish = new Fish[0];
            Fishes fishes = new Fishes();

            while (true)
            {
                Console.SetCursorPosition(0, 18);
                fishes.ShowFishesInAnAquarium(fish);
                Console.SetCursorPosition(0, 0);

                fishes.FishConditionCheck(ref fish);
                СommandProcessing(ref fish, fishes);

                Console.ReadKey();
                Console.Clear();
            }
        }

        private static void СommandProcessing(ref Fish[] fish, Fishes fishes)
        {
            int fishNumber;

            Console.WriteLine("Выберите команду:" +
            "\n1)Добавить рыбу" +
            "\n2)Достать рыбу");

            switch (Convert.ToInt32(Console.ReadLine()))
            {
                case 1:
                    fishes.AddFish(ref fish);
                    break;
                case 2:
                    Console.WriteLine("\nВвведите номер рыбы, которую хотите достать:");
                    fishNumber = Convert.ToInt32(Console.ReadLine()) - 1;
                    fishes.GetFishOutOfAquarium(ref fish, fishNumber);
                    break;
                default:
                    Console.WriteLine("Такой команды нет!!!");
                    break;
            }
        }
        class Fish : Fishes
        {
            public Fish(int ageOfFish, int maximumAgeOfFish)
            {
                AgeOfFish = ageOfFish;
                MaximumAgeOfFish = maximumAgeOfFish;

            }
            public void ShowInfo(int i)
            {
                Console.WriteLine($"{i + 1}){AgeOfFish}/{MaximumAgeOfFish}");
            }
        }
        class Fishes
        {
            protected int AgeOfFish;
            protected int MaximumAgeOfFish;

            public void AddFish(ref Fish[] fish)
            {
                Fish[] tempFish = new Fish[fish.Length + 1];
                tempFish[tempFish.Length - 1] = new Fish(0, 10);
                for (int i = 0; i < fish.Length; i++)
                {
                    tempFish[i] = fish[i];
                }
                fish = tempFish;
            }

            public void ShowFishesInAnAquarium(Fish[] fish)
            {
                Console.WriteLine("\nРыбы в аквариуме:");
                for (int i = 0; i < fish.Length; i++)
                {
                    fish[i].ShowInfo(i);
                    fish[i].AgeOfFish++;
                }
            }

            public void GetFishOutOfAquarium(ref Fish[] fish, int fishNumber)
            {
                for (int i = 0; i < fish.Length; i++)
                {
                    if (fishNumber == i)
                    {
                        List<Fish> tempFishes = fish.ToList();
                        tempFishes.RemoveAt(i);
                        fish = tempFishes.ToArray();
                    }
                }
            }

            public void FishConditionCheck(ref Fish[] fish)
            {
                for (int i = 0; i < fish.Length; i++)
                {
                    if (fish[i].AgeOfFish == fish[i].MaximumAgeOfFish)
                    {
                        Console.WriteLine($"Одна из рыб умерла, она будет убрана из акавариума.\n");
                        GetFishOutOfAquarium(ref fish, i);
                    }
                }
            }
        }
    }
}
