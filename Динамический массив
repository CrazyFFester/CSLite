using System;

namespace Dynamic_array
{
    class Program
    {
        static void Main(string[] args)
        {
            int amountOfNumbers, sumOfNumbers = 0;
            bool programState = true;

            while (programState == true)
            {
                Console.WriteLine("Выберите команду: \n\n1)sum.\n\n2)exit.");
                switch (Console.ReadLine())
                {
                    case "sum":
                        Console.Write("\nСколько чисел будет использовано: ");
                        amountOfNumbers = Convert.ToInt32(Console.ReadLine());
                        int[] arrayOfNumbersToBeSum = new int[0];
                        int[] tempArrayOfNumbersToBeSum = new int[amountOfNumbers];
                        for (int i = 0; i < arrayOfNumbersToBeSum.Length; i++)
                        {
                            tempArrayOfNumbersToBeSum[i] = arrayOfNumbersToBeSum[i];
                        }
                        for (int i = 0; i < tempArrayOfNumbersToBeSum.Length; i++)
                        {
                            Console.Write($"Введите {i + 1} число: ");
                            tempArrayOfNumbersToBeSum[i] = Convert.ToInt32(Console.ReadLine());
                            arrayOfNumbersToBeSum = tempArrayOfNumbersToBeSum;
                            sumOfNumbers += arrayOfNumbersToBeSum[i];
                        }
                        Console.WriteLine($"\nСумма чисел - {sumOfNumbers}");
                        sumOfNumbers = 0;
                        break;
                    case "exit":
                        programState = false;
                        Console.WriteLine("\nПрограмма закрывается...");
                        break;
                    default:
                        Console.WriteLine("Такой команды нет!");
                        break;
                }
                Console.ReadKey();
                Console.Clear();
            }
        }
    }
}
