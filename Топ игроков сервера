using System;
using System.Collections.Generic;
using System.Linq;

namespace Server_top_players
{
    class Program
    {
        private static void Main()
        {
            List<Player> players = new List<Player> {new Player("Никита", 11, 1111), new Player("Дмитрий", 21, 1217), new Player("Джек", 43, 2001), new Player("Саймон", 50, 1300), new Player("Пётр", 100, 1980),
                new Player("Том", 28, 1703), new Player("Майкл", 69, 1920), new Player("Мишель", 80, 1500), new Player("Мария", 81, 1901), new Player("Анастасия", 99, 2000)};
            int placeInTable = 1;

            var filteredPlayersByLevel = players.OrderByDescending(player => player.Level).Take(3);
            var filteredPlayersByPower = players.OrderByDescending(player => player.Power).Take(3);

            ShowTable(filteredPlayersByLevel, placeInTable, "Лучшие игроки по уровню");
            Console.WriteLine();
            ShowTable(filteredPlayersByPower, placeInTable, "Лучшие игроки по силе");
        }

        private static void ShowTable(IEnumerable<Player> players, int placeInList, string nameOfTable)
        {
            Console.WriteLine($"{nameOfTable}:");
            
            foreach (var player in players)
            {
                player.ShowInfo(placeInList);
                placeInList++;
            }
        }
    }

    class Player
    {
        private string _name;

        public int Level { get; private set; }
        public int Power { get; private set; }

        public Player(string name, int level, int power)
        {
            _name = name;
            Level = level;
            Power = power;
        }

        public void ShowInfo(int placeInList)
        {
            Console.WriteLine($"{placeInList})Имя - {_name}, Уровень - {Level}, Сила - {Power}");
        }
    }
}
